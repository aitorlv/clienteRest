<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.aitor.clienterest.Fragmento_detalle">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="3">

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/ivDetalle"
                android:layout_weight="3"
                android:layout_gravity="center"
                android:src="@drawable/profe" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"

                android:layout_marginLeft="10dp">



                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/spinnerNombre"
                    android:layout_weight="1"
                    android:textSize="15dp"
                    android:editable="false" />

                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="Departamento"
                    android:id="@+id/tvDepartamento"
                    android:layout_weight="1"
                    android:textSize="15dp"
                    android:editable="false"/>
                <EditText
                    android:textSize="15dp"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/spinnerGrupo"
                    android:layout_weight="1"
                    android:editable="false" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:layout_marginTop="10dp">

            <EditText
                android:textSize="15dp"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="Tipo"
                android:id="@+id/tvTipo"
                android:layout_weight="3"
                android:editable="false"/>

            <EditText
                android:textSize="15dp"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="Fecha Inicio"
                android:id="@+id/tvInicio"
                android:layout_weight="3"
                android:editable="false"/>

            <EditText
                android:textSize="15dp"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="Fecha Fin"
                android:id="@+id/tvFin"
                android:layout_weight="3"
                android:editable="false" />

            <EditText
                android:textSize="15dp"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="Descripcion"
                android:id="@+id/tvDescripcionDetalle"
                android:layout_weight="2"
                android:editable="false" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="3">

            <EditText
                android:textSize="15dp"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="Lugar de inicio"
                android:id="@+id/tvLugarI"
                android:layout_weight="1"
                android:editable="false" />

            <EditText
                android:textSize="15dp"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="Lugar de fin"
                android:id="@+id/tvLugarF"
                android:layout_weight="1"
                android:editable="false" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>
